.count {
  display: flex;
  flex-wrap: wrap;
  text-align: center;
  border-bottom: 10rpx solid #eeeeee;
}
.count .count_item {
  width: 375rpx;
  height: 200rpx;
  line-height: 180rpx;
}
.count .count_item .count_item_text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #666666;
}
.count .count_item .count_item_num {
  height: 130rpx;
  line-height: 130rpx;
  color: #e7624f;
}
.detail {
  width: 700rpx;
  margin: 0 auto;
}
.detail .title {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  display: flex;
  border-bottom: 2rpx solid  #e7624f;
}
.detail .title .title_text {
  text-align: left;
  flex: 1;
}
.detail .title .title_type {
  text-align: right;
  flex: 1
}
.detail .title .title_type text {
  padding-left: 10rpx;
}
.list_item {
  width: 700rpx;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  text-align: center;
  border-bottom: 1rpx solid #eeeeee;
}
.list_item .list_item_date {
  width: 300rpx;
}
.list_item .list_item_cate,.list_item .list_item_time {
  width: 200rpx;
}
.active {
  color: #e7624f;
}
.nolist {
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  color: #666666;
}
